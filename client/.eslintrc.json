{
  "env": {
      "browser": true,
      "es2021": true,
      "node": true  // Add this line
  },
  "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
  ],
  "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"  // Ensure that module is recognized as a valid source type
  },
  "plugins": [
      "react"
  ],
  "rules": {
    "jsx-quotes": ["error", "prefer-double"],
    "react/react-in-jsx-scope": "off",
    "react/no-unescaped-entities": "off", 
     "@typescript-eslint/no-unused-vars": "off",
     "no-unused-vars": "off"

  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}

